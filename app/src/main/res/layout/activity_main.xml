<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/easyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="startGame"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/easy_game"
        app:layout_constraintBottom_toTopOf="@+id/middleButton"
        app:layout_constraintEnd_toEndOf="@+id/middleButton"
        app:layout_constraintStart_toStartOf="@+id/middleButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/middleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/middle_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/hard_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/middleButton"
        app:layout_constraintStart_toStartOf="@+id/middleButton"
        app:layout_constraintTop_toBottomOf="@+id/middleButton" />

    <Switch
        android:id="@+id/musicSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/music_switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/hardButton"
        app:layout_constraintStart_toStartOf="@+id/hardButton"
        app:layout_constraintTop_toBottomOf="@+id/hardButton" />

</androidx.constraintlayout.widget.ConstraintLayout>